{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

    {% block body %}
        <main class="container">
            <secrion class="row">
                {% for item in products %}

                    <div class="col-4">
                        <div class="card" style="width: 18rem;">
                            <h1>{{ item.name }}</h1>
                            <img src="{{ asset('assets/uploads/products/mini/300x300-'~ item.images[0].name ) }}" class="card-img-top vitrine__image" alt="{{ item.name }}">
                            <div class="card-body">
                                {# <h5 class="card-title">Card title</h5> #}
                                <p>{{ item.description }}</p>
                                <a href="{{ path('produits_details', {slug: item.id }) }}" class="btn btn-primary">voir {{ item.name }}</a>
                            </div>
                        </div>     
                    </div>

                {% endfor %}

            </secrion>
        </main>

    {% endblock %}
